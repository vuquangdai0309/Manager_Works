{{>sidebar}}
<div id="right-panel" class="right-panel" style="z-index: -1;  background: url('/img/background4.jpg') ; 
  background-size: cover;">
    {{> header}}
   
        <div class="col-sm-12">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Công ty Lâm Hải</h1>
                </div>
            </div>
        </div>
        <div class="content mt-3">
            <div class="col-sm-6 col-lg-3">
                <div class="card text-white bg-flat-color-1">
                    <div class="card-body pb-0">

                        <h4 class="mb-0">
                            <span class="count">{{count}}</span>
                        </h4>
                        <p class="text-light">Thành viên </p>

                        <div class="chart-wrapper px-0" style="height:70px;" height="70">
                            <canvas id="widgetChart1"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <!--/.col-->
            <div class="col-sm-6 col-lg-3">
                <div class="card text-white bg-flat-color-3">
                    <div class="card-body pb-0">

                        <h4 class="mb-0">
                            <span class="count">{{countWork}}</span>
                        </h4>
                        <p class="text-light">Công việc</p>
                    </div>
                    <div class="chart-wrapper px-0" style="height:70px;" height="70">
                        <canvas id="widgetChart3"></canvas>
                    </div>
                </div>
            </div>
            <!--/.col-->
        </div> <!-- .content -->
       

</div>
