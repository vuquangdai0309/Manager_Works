{{>sidebar}}
<div id="right-panel" class="right-panel" style="z-index: -1;  background: url('/img/background1.jpg') ; 
  background-size: cover;">
    {{> header}}
    <div id="content" slug_Work="{{work.slug}}">
        <div class="col-sm-12">
            <div class="page-header float-left" style="background-color: rgba(232, 232, 232, 0.305); color:white ;">
                <div class="page-title">
                    <h1 style="font-weight:600">{{work.title}}</h1>
                </div>
            </div>

            <div class=" float-right ">
                <div class="page-title">
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal"
                        data-bs-whatever="@getbootstrap"><i class="fa fa-user"></i> Thêm thành viên</button>
                </div>
            </div>
            <div class="header-left">
                <div class="dropdown for-message float-right float-right" style="margin-right: 30px;">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="message1" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-users"> Thành viên</i>
                        <span class="count bg-primary">{{count}}</span>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="message">
                        <p class="red" style="color:black"> Các thành viên</p>
                        {{#each member}}
                        <a class="dropdown-item media " href="#" style=" border-top: 1px solid #cfcfcf;">
                            <span class="photo media-left"><img alt="avatar" src="/img/admin.png"></span>
                            <span class="message media-body">
                                <span class="name float-left">{{this.username}}</span>
                            </span>
                        </a>

                        {{/each }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="float-right " id="alertMessage" style="display: none;">
                <div class="sufee-alert alert with-close alert-success alert-dismissible fade show">
                    <span class="badge badge-pill badge-success">Thông báo</span>
                    <span id="message"></span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="content mt-3 ">

            <div class="row">
                {{#each works}}
                <div class="col-sm-8 col-lg-3 mb-3">
                    <div class="card  bg-flat-color-6">
                        <div class="col-md-12">
                            <br>
                            <h5 style="font-weight: 600; margin-bottom: 10px;">{{child_work_title}}</h5>

                        </div>
                        {{#each progress_works}}

                        <div class="col-sm-12 text-black ">
                            <div class="card box-small-1" style="margin-top: 0.5rem;">
                                <div class="stat-widget-one ">
                                    <div class="row">
                                        <button onclick="changePage({{progress_work_id}})" id="btn-{{progress_work_id}}"
                                            slug="{{progress_work_slug}}" class="col-lg-12 col-12 text-left">
                                            <div class="stat-content dib" style="margin-bottom: 10px;">
                                                <div class="stat-text">{{progress_work_title}}
                                                </div>
                                                <span class="badge  " style="background-color:#216e4e ;color:white"> <i
                                                        class="bi bi-clock-fill"
                                                        style="margin-right: 5px;"></i>{{progress_work_date}}</span>

                                                <span class="badge badge-pill badge-light"><i class="bi bi-chat">
                                                        {{comment_count}}</i></span>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>
